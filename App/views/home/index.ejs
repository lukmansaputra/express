<%- include("../components/hero-component") %>

<section id="products" class="dark:bg-gray-800 py-20 px-4 md:px-12 mx-auto">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl font-bold text-center text-gray-800 dark:text-gray-100 mb-12">
      Our Products
    </h2>

    <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 gap-6">
      <% products.forEach(product => { %>
        <a href="/product/overview/<%= product.slug %>" class="cursor-pointer relative group rounded-lg overflow-hidden shadow-lg">
          <img
            class="h-[10rem] md:h-[15rem] w-full object-cover"
            src="<%= product.images[0] %>"
            alt="<%= product.name %>"
          />
          <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 flex items-center justify-center transition duration-300">
            <span class="text-white text-lg font-semibold">View Product</span>
          </div>

        </a>
      <% }); %>

      <!-- See More Card -->
      <a href="/product" class="flex items-center justify-center border-2 border-dashed border-gray-400 dark:border-gray-500 rounded-lg text-center p-8 hover:border-indigo-500 transition">
        <span class="text-lg font-bold text-gray-700 dark:text-gray-200">See more...</span>
      </a>
    </div>
  </div>
</section>


